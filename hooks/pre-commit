#!/bin/bash


# check if we're in an interactive shell
if [ -z "$PS1" ]
then

  exec < /dev/tty

  branch="$(git rev-parse --abbrev-ref HEAD)"
  if [ "$branch" = "master" ] || [ "$branch" = "main" ]
  then

    read -p "Really commit to $branch? [yN] "
    if [[ $REPLY =~ ^[Yy]$ ]]
    then
      exit 0
    else
      echo "Canceled by user."
      exit 1
    fi
  fi
fi
